{% extends 'base.html.twig' %}

{# ... #}

{% block body %}



    <form action="{{ path('app_login') }}" method="post" class="login">

        <div class="logoSEO">
            <img src="{{ asset('assets/img/logoSEO_sf.png')}}" alt="Logo SEO" />
        </div>

            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"/>

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password"/>

            <input type="hidden" name="app_alerta_index" value="/alerta"/> 
            <button type="submit">Entrar</button>

        {% if error %}
        <div class="errorText">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>


{% endblock %}