{% extends 'baseAdmin.html.twig' %}

{% block title %}Alerta{% endblock %}

{% block body %}
    <h1 class="title">Alerta</h1>

    <a href="{{ path('app_alerta_index') }}"><button class='btnVolver'>{{ button_label|default('Volver') }}</button></a>

    <table class="table">
        <tbody>
            <tr>
                <th>Tipo de Amenaza</th>
                 <td>{{ alertum.tipoAmenaza }}</td>
            </tr>
            <tr>
                <th>Ubicación</th>
                <td>{{ alertum.ubicacion }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                    <img src="{{ asset('upload/' ~ alertum.foto) }}" width="150px">
                <td>{{ alertum.foto }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ alertum.descripcion }}</td>
            </tr>
            <tr>
                <th>Gravedad de la amenaza</th>
                <td>{{ alertum.severidadAmenaza }}</td> 
            </tr>
            <tr>
                <th>Superficie afectada</th>
                <td>{{ alertum.superficieAfectada }}</td> 
            </tr>
                <th>Gravedad en el tiempo</th>
                <td>{{ alertum.tiempoDesarrollo }}</td> 
            </tr>
            <tr>
                <th>Impacto de la amenaza</th>
                {# <td>{{ alertum.sumatorio }}</td> #}
                <td>{{ alertum.tiempoDesarrollo + alertum.superficieAfectada + alertum.severidadAmenaza }}</td> 
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ alertum.nombreContacto }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ alertum.emailContacto }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ alertum.telefonoContacto }}</td>
            </tr>
        </tbody>
    </table>

    <div class="butonContainer">
        <a href="{{ path('app_alerta_edit', {'id': alertum.id}) }}"><button class='btnEditar'>{{ button_label|default('✏') }}</button></a>
        {{ include('alerta/_delete_form.html.twig') }}
    </div>
{% endblock %}
