{% extends 'baseAdmin.html.twig' %}

{% block title %}Alerta{% endblock %}

{% block body %}
    <h1 class="title">Alerta {{ alertum.id }}</h1>
    <section class="card-admin">   

        <a href="{{ path('app_alerta_index') }}"><button class='btnSalir'>{{ button_label|default('Volver') }}</button></a>

        <table class="table table-hover table-bordered">
            <tbody>
            <div class="container">
                <div>
                    <td><img class='imgSow' src="{{ asset('upload/' ~ alertum.foto) }}"></td>
                <div>
                <div>
                    </tr>
                    <tr>
                        <th class='thead-light'>Tipo de amenaza</th>
                        <td id='Tipo'>{{ alertum.tipoAmenaza }}</td>
                    </tr>
                        <tr>
                        <th>Ubicación</th>
                        <td id='Ubicacion'>{{ alertum.ubicacion }}</td>
                    </tr>
                    <tr>
                        <th>Descripción</th>
                        <td id='Descripcion'>{{ alertum.descripcion }}</td>
                    </tr>
                    <tr>
                        <th>Gravedad de la amenaza</th>
                        <td id='Gravedad'>{{ alertum.severidadAmenaza }}</td> 
                    </tr>
                    <tr>
                        <th>Superficie afectada</th>
                        <td id='Superficie'>{{ alertum.superficieAfectada }}</td> 
                    </tr>
                        <th>Gravedad en el tiempo</th>
                        <td id='Tiempo'>{{ alertum.tiempoDesarrollo }}</td> 
                    </tr>
                    <tr>
                        <th>Impacto de la amenaza</th>
                        {# <td>{{ alertum.sumatorio }}</td> #}
                        <td id='Impacto'>{{ alertum.tiempoDesarrollo + alertum.superficieAfectada + alertum.severidadAmenaza }}</td> 
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ alertum.nombreContacto }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td id='Contacto'>{{ alertum.emailContacto }}</td>
                    </tr>
                    <tr>
                        <th>Teléfono</th>
                        <td>{{ alertum.telefonoContacto }}</td>
                    </tr>
                <div>
            </div>
            </tbody>
        </table>

        <div class="butonContainer">
            <a href="{{ path('app_alerta_edit', {'id': alertum.id}) }}"><button class='btnEmojiEditarSow'>{{ button_label|default('') }}<img class ="emojiEditar" src="\assets\img\editar.png" alt="Editar" /></button></a>
            {{ include('alerta/_delete_form.html.twig') }}
        <button id='boton-xml'>Descargar xml</button>
        </div>
        <script src="/assets/js/createXML.js"></script>
    </section>
    {% endblock %}
